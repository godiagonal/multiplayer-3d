/* Variables */

$font-family = Roboto, Helvetica, Arial, sans-serif

/* Elements */

*
    font-family $font-family

html, body
    width 100%
    height 100%

body
    margin 0
    overflow hidden
    font-weight 300

table
    border-collapse collapse

    td
        vertical-align top

a
    color white
    text-decoration none
    
a:hover, a:focus
    text-decoration underline
        
h1, h2, h3
    font-weight 300
        
input
    display inline-block
    margin 0
    margin-right 10px
    line-height 23px
    padding 10px 15px
    background #fff
    outline none
    border-radius 3px
    border 1px solid #ddd
    box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
    -webkit-box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
    font-family $font-family
    font-size 12pt
    font-weight 300
    transition all .25s ease-in-out
    -moz-transition all .25s ease-in-out
    -webkit-transition all .25s ease-in-out
        
input[type=text]:focus
    border-color #e65a30
    
input[type=button]
    box-shadow none
    -webkit-box-shadow none
    background-color #7abc72
    border-color #61965b
    color white
    cursor pointer
    
input[type=button]:hover
    background-color #87d17e
    border-color #6ea767
        
/* Classes */

.error
    color #c44242

.success
    color #408940

.speechBubble
    background white
    padding 7px
    border-radius 5px
    border 1px solid #535353
    box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
    -webkit-box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
    overflow-y hidden
    position absolute
    z-index 5
    font-size 10pt

.nameLabel
    overflow-y hidden
    position absolute
    z-index 4
    color #ffffff
    text-shadow -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000
    letter-spacing 2px
    
/* IDs */

#blocker
    position absolute
    width 100%
    height 100%
    background-color rgba(0,0,0,0.75)
    z-index 10

#instructions
    position absolute
    top calc(50% - 250px)
    width 100%
    height 100%
    color #ffffff
    text-align center
    
    input
        margin-top 30px
  
    #newPlayer
        display none
        
        #txtName
            width 250px
    
    #startGame
        display none
        
        #btnStart
            width 80px
        
    #about
        margin-top 150px
        
        img
            width 50px
            opacity 0.6
            transition all .25s ease-in-out
            -moz-transition all .25s ease-in-out
            -webkit-transition all .25s ease-in-out
        
        img:hover, img:focus
            opacity 1

#chat
    height 200px
    width 500px
    position absolute
    bottom 0
    margin 10px 10px
    z-index 5
    display none

    #messages
        width 100%
        height 75%
        height calc(100% - 50px)
        background white
        border-radius 3px
        border 1px solid #ddd
        box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
        -webkit-box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
        
        #messagesInner
            height 90%
            margin 8px
            overflow-y scroll
            font-size 10pt
        
            #messageList
                width 100%

                td:nth-child(1)
                    width 32px

                td
                    padding-right 5px
                    padding-top 5px

                .userName
                    font-weight bold

                .server
                    color grey

    #input
        width 100%
        height 37px
        position absolute
        bottom 0

        #txtMessage
            display block
            float left
            height 25px
            width calc(100% - 20px)
            padding 5px 10px
            resize none
            margin 0